border-1px($color)
  position: relative
  &::after
    content: ''
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-top: 1px solid $color


border-none()
  &::after
    display: none






bg-image($url)
  background-image: url("../../../resource/img/"+ $url +"@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(-webkit-min-device-pixel-ratio: 3)
    background-image: url("../../../resource/img/"+ $url +"@3x.png")


bd-radius($Num-px)
  -webkit-border-radius: $Num-px
  -moz-border-radius: $Num-px
  border-radius: $Num-px



